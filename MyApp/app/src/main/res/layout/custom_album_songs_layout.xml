<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customAlbumSongsRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/customAlbumSongsAlbumArt"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/noalbumart" />

    <ListView
        android:id="@+id/customAlbumSongsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/customAlbumSongsAlbumArt"
        android:paddingTop="10dp"
        android:dividerHeight="0dp"
        android:divider="@null"
        />

    <TextView
        android:id="@+id/customAlbumSongsAlbumName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/customAlbumSongsListView"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="7dp"
        android:paddingStart="7dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>