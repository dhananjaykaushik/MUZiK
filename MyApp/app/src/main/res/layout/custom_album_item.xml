<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlx"
    android:layout_width="100dp"
    android:layout_height="160dp"
    android:fadeScrollbars="false"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/customAlbumItemArt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/noalbumart" />

    <TextView
        android:id="@+id/customAlbumItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/customAlbumItemArt"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/customAlbumItemArt"
        android:maxLines="1"
        android:paddingStart="3dp"
        android:paddingTop="5dp"
        android:text="Download"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/customAlbumItemArtistName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/customAlbumItemName"
        android:maxEms="15"
        android:maxLength="18"
        android:maxLines="1"
        android:paddingStart="3dp"
        android:paddingTop="2dp"
        android:text="asas"
        android:textColor="@android:color/black"
        android:textSize="13sp" />

    <CheckBox
        android:id="@+id/customAlbumItemCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

</RelativeLayout>